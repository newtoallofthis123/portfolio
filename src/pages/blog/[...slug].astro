---
import {getEntry, getCollection} from 'astro:content'
import Base from '../../layouts/base.astro';
import { Image } from 'astro:assets';

const {slug} = Astro.params;

const post = await getEntry('blog', slug as string)

// @ts-ignore
const { Content } = await post?.render();

const meta = post?.data;
---

<Base title={meta?.title} emoji={meta?.emoji}>
    <div class="px-2">
        <h1 class="text-4xl font-black">
            {meta?.title}
        </h1>
        <p class="mt-2">
            {meta?.description}
        </p>
        <p class="mt-2 text-md dark:text-neutral-200 text-neutral-700">
            Posted on {
                meta?.date ? new Date(meta.date).toDateString() : null
            }
        </p>
        <div>
            {
                meta?.img && (
                    <div class={`p-2 py-5`}>
                        <Image
                            class=" rounded-md"
                            src={meta.img}
                            alt={meta?.title}
                        />
                    </div>
                )
            }
        </div>
    </div>
    <div class="md:px-4">
        <Content />
    </div>
</Base>