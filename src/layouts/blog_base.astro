---
export interface Props {
    title?: string;
    emoji?: string;
    color?: string;
    description?: string;
    img?: string;
    nav?: boolean;
    bg?: string;
}

const {
    title,
    emoji,
    description,
    color = 'black',
    bg = 'white',
    img = '/banner.png',
    nav = false,
} = Astro.props;

import '@fontsource-variable/jetbrains-mono';
// import '@fontsource-variable/inter';
import '@fontsource/scheherazade-new/400.css';
import '@fontsource/scheherazade-new/700.css';
import '@fontsource/atkinson-hyperlegible/400.css';
import '@fontsource/atkinson-hyperlegible/700.css';
import '@fontsource/archivo-black';
import 'bootstrap-icons/font/bootstrap-icons.min.css';
import BlogNav from '../components/blog_nav';

import '../styles/global.css';
import { siGithub, siRss } from 'simple-icons';
import { ViewTransitions } from 'astro:transitions';
const BASE_URL = 'http://' + Astro.url.host;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="robots" content="index, follow, archive" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta name="theme-color" content="#ffd845" />
        <meta name="title" content="NoobScience" />
        <meta
            name="description"
            content={description ||
                'Hi! I am Ishan. I am a Student and Open Source Enthusiast. This is my personal portfolio website. I Like to Code Stuff. Check out my work!'}
        />
        <meta name="title" content={title || 'NoobScience'} />
        <meta
            name="keywords"
            content="noobscience, noob science, NoobScience, newtoallofthis123, technology, website"
        />
        <meta name="author" content="NoobScience" />
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={BASE_URL} />
        <meta property="twitter:title" content="NoobScience" />
        <meta
            property="twitter:description"
            content={description ||
                'Student and Linux Guy. Working on Rust and Go.'}
        />
        <meta property="twitter:image" content={BASE_URL + img} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={BASE_URL} />
        <meta property="og:title" content={title || 'NoobScience'} />
        <meta
            property="og:description"
            content={description ||
                'Student and Open Source Enthusiast. I Like to Code Stuff. Check out my work!'}
        />
        <meta property="og:image" content={BASE_URL + img} />

        <ViewTransitions fallback="none" />

        <script defer is:inline src="/_vercel/insights/script.js"></script>
        <link
            rel="alternate"
            type="application/rss+xml"
            title="Ishan Writes"
            href={`${BASE_URL}/rss.xml`}
        />

        <title>
            {title ?? 'NoobScience'}
        </title>
    </head>
    <body>
        <main class="flex flex-col justify-center items-center">
            <div class="md:p-0 p-2">
                <BlogNav color={color} bg={bg} />
                <div class="">
                    <slot />
                </div>
                <footer
                    transition:persist
                    class="md:px-8 py-4 text-xl border-t-2 border-b-2 border-black md:flex md:flex-row md:items-center md:justify-between md:gap-x-4"
                >
                    <p class="font-mono font-bold">
                        &copy; Ishan Joshi {new Date().getFullYear()}
                    </p>
                    <p class="pl-3">
                        (
                        <span id="theme" class="cursor-pointer"
                            >Theme Toggle</span
                        >
                        )
                    </p>
                    <p class="pl-3 flex flex-row gap-x-4">
                        <a href="/rss.xml">
                            <span set:html={siRss.svg} id="inline-icon" />
                        </a>
                        <a
                            href="https://github.com/newtoallofthis123/portfolio"
                        >
                            <span set:html={siGithub.svg} id="inline-icon" />
                        </a>
                    </p>
                </footer>
            </div>
        </main>
        <script is:inline>
            const prefersDarkScheme = window.matchMedia(
                '(prefers-color-scheme: dark)'
            );
            let theme = '';
            const themeElement = document.getElementById('theme');

            const updateTheme = () => {
                if (
                    prefersDarkScheme.matches ||
                    localStorage.getItem('theme') == 'dark'
                ) {
                    document.documentElement.classList.add('dark');
                    if (themeElement) themeElement.innerText = 'Dark üåë';
                    theme = 'dark';
                } else {
                    document.documentElement.classList.remove('dark');
                    document.documentElement.classList.add('light');
                    if (themeElement) themeElement.innerText = 'Light ‚òÄÔ∏è';
                    theme = 'light';
                }
            };
            updateTheme();
            const handleTheme = () => {
                if (theme == 'light') {
                    document.documentElement.classList.add('dark');
                    if (themeElement) themeElement.innerText = 'Dark üåë';
                    theme = 'dark';
                    localStorage.setItem('theme', 'dark');
                } else {
                    document.documentElement.classList.remove('dark');
                    document.documentElement.classList.add('light');
                    if (themeElement) themeElement.innerText = 'Light ‚òÄÔ∏è';
                    theme = 'light';
                    localStorage.setItem('theme', 'light');
                }
            };
            document
                .getElementById('theme')
                ?.addEventListener('click', handleTheme);
            document.addEventListener('astro:after-swap', updateTheme);
        </script>
        <style is:inline>
            /* nav {
                background-color: #fbfbfb;
            }
            body {
                background-color: #fbfbfb;
            } */
            ::selection {
                background-color: #aef444;
                color: #000;
            }
            main {
                font-family: 'Inter', --apple-system, BlinkMacSystemFont,
                    'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans',
                    'Helvetica Neue', sans-serif;
            }
            h1 {
                font-family: 'Archivo Black', --apple-system, BlinkMacSystemFont,
                    'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans',
                    'Helvetica Neue', sans-serif;
            }
            p {
                font-size: 1.2rem;
                line-height: 2.5rem;
            }
            a {
                text-decoration: underline;
            }
            @media (max-width: 768px) {
                h1,
                h2 {
                    font-size: 1.5rem;
                    line-height: 1.6;
                }
                p {
                    font-size: 1rem;
                    line-height: 2.2rem;
                }
            }
        </style>
    </body>
</html>
