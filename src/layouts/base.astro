---
export interface Props{
    title?: string;
    emoji?: string;
}

const {title, emoji} = Astro.props;

import '@fontsource-variable/jetbrains-mono';
import '@fontsource-variable/inter';
import 'bootstrap-icons/font/bootstrap-icons.min.css';
import Nav from '../components/nav';

import '../styles/global.css'
---

<!DOCTYPE html>
<html lang="en" class="ctp-macchiato">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

    <title>
        { title ?? "NoobScience" }  
    </title>
</head>
<body class="bg-ctp-base font-mono">
    <main class="flex flex-col text-ctp-text justify-center items-center">
        <div class="md:w-3/5 w-full md:p-0 p-2">
	        <Nav emoji={emoji} client:load />
            <div class="md:p-4 p-1 pt-2 md:my-5 border-dark dark:border-neutral-100 md:border-2">
                <slot />
            </div>
        </div>
    </main>
</body>
<script>
    // dark mode
    const prefersDarkScheme = window.matchMedia("(prefers-color-scheme: dark)");
    if(prefersDarkScheme.matches){
        // add dark mode class to html
        document.documentElement.classList.add('ctp-macchiato');
    }else{
        // add light mode class to html
        document.documentElement.classList.add('ctp-latte');
    }
</script>
</html>
